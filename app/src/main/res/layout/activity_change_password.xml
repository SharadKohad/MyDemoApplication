<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_back_arrow_change_password"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/img_back_arrow_change_password"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/shadow_background_textview"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit_text_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="#0000"
                android:gravity="center|left"
                android:hint="Enter Old Passsword"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shadow_background_textview"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit_text_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="#0000"
                android:gravity="center|left"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:hint="New Password"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shadow_background_textview"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit_text_new_password_conform"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="#0000"
                android:gravity="center|left"
                android:hint="Conform Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


            <Button
                android:id="@+id/button_forgotpassword_save"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_rounded_green"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

    </LinearLayout>
</LinearLayout>